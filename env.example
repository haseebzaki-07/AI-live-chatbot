# Database
DATABASE_URL="postgresql://user:password@localhost:5432/chatbot_db"

# Upstash Redis (for caching)
UPSTASH_REDIS_REST_URL="your-upstash-redis-rest-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-rest-token"

# OpenAI API Configuration
OPENAI_API_KEY="your-openai-api-key-here"

# Optional: LLM Configuration
LLM_MODEL="gpt-3.5-turbo"  # or "gpt-4", "gpt-4-turbo-preview"
MAX_TOKENS="500"            # Max tokens per response (cost control)
LLM_TIMEOUT="30000"         # Timeout in milliseconds (30 seconds)

# Node Environment
NODE_ENV="development"




# Additional services - Adapters and tools for future scalibility not required right now
# Channel Integrations
# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN="your-whatsapp-verify-token"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-whatsapp-phone-number-id"

# Instagram Graph API
INSTAGRAM_VERIFY_TOKEN="your-instagram-verify-token"
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"

# Tools Integration (Optional)
# Order Management System
ORDER_API_URL="https://api.example.com/orders"
ORDER_API_KEY="your-order-api-key"

# Shipping Carrier APIs
SHIPPING_API_KEY="your-shipping-api-key"
SHIPPING_CARRIER="ups" # or "fedex", "usps", "dhl"

# Inventory System
INVENTORY_API_URL="https://api.example.com/inventory"
INVENTORY_API_KEY="your-inventory-api-key"

